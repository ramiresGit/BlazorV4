@inherits LayoutComponentBase
@using BlazorV4.Client.Components
@using MudBlazor;
<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />
        <MudLayout>
            <MudTabs Style="@($"background:{Colors.Grey.Darken1}; color:{Colors.Shades.White}; max-height:100vh;")" >
                <MudTabPanel Text="Scanning" Style="@($"background:{Colors.Grey.Darken1}; color:{Colors.Shades.White}")" >
                    <MudGrid>
                        
                        <MudItem  xs="12">
                            <MudPaper Elevation="10">
                                <TopBar />
                            </MudPaper>
                            
                        </MudItem>

                        <MudItem xs="2" Style="@($"background:{Colors.Grey.Darken2}; color:{Colors.Shades.White}")" >
                            <MudPaper >
                                <Gallery />
                            </MudPaper>
                          
                        </MudItem>

                        <MudItem xs="10" Style="@($"background:{Colors.Grey.Darken2}; color:{Colors.Shades.White}")" >
                            <MudMainContent>
                                @Body
                            </MudMainContent>
                        </MudItem>
                        
                    </MudGrid>
                </MudTabPanel>
            </MudTabs>
        </MudLayout>




